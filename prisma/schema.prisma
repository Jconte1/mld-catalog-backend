// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id              String   @id @default(uuid())
  slug            String?  @unique
  model           String?
  brand           String?
  type            String?
  features        String[]
  configuration   String[]
  productType     String[]
  width           String?
  fuelType        String[]
  major           String?
  minor           String?
  data            Json
  created_at DateTime @default(now())
}
